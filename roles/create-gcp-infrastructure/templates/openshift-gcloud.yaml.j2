# infrande networking

- type: compute.v1.address
  name: infranode-external
  properties:
    region: {{ gcloud_region }}
- name: infranode-http-health-check
  type: compute.v1.httpHealthCheck
  properties:
    port: 80
- type: compute.v1.targetPool
  name: infranode-pool
  properties:
    region: {{ gcloud_region }}
    instances:
{% for i in range(1,gcloud_infranodes_num|int+1) %}
    - $(ref.{{ gcloud_infranodes_name_prefix ~ i|string }}.selfLink)
{% endfor %}    
    healthChecks: 
    - $(ref.infranode-http-health-check.selfLink)
- type: compute.v1.forwardingRule
  name: infranode-external-fwr
  properties: 
    region: {{ gcloud_region }}
    IPAddress: $(ref.infranode-external.selfLink)
    target: $(ref.infranode-pool.selfLink)
    IPProtocol: TCP
- name: oc-infranode
  type: compute.v1.firewall
  properties:
    allowed:
    - IPProtocol: tcp
      ports:
      - 80
      - 443
    sourceRange: 0.0.0.0/0
    targetTags:
    - infranode
    
# master networking    
    
- type: compute.v1.address
  name: master-external
  properties:
    region: {{ gcloud_region }}
- name: master-https-health-check
  type: compute.v1.httpsHealthCheck
  properties:
    port: 8443
    requestPath: "/healthz"
- name: master-internal-https-health-check
  type: compute.v1.healthCheck
  properties:
    type: HTTPS
    httpsHealthCheck:
      port: 8443
      requestPath: "/healthz"   
- type: compute.v1.targetPool
  name: master-pool
  properties:
    region: {{ gcloud_region }}
    instances: 
{% for i in range(1,gcloud_masters_num|int+1) %}
    - $(ref.{{ gcloud_masters_name_prefix ~ i|string }}.selfLink)
{% endfor %}
#    healthChecks: 
#    - $(ref.master-https-health-check.selfLink)
- type: compute.v1.forwardingRule
  name: master-external-fwr
  properties: 
    region: {{ gcloud_region }}
    IPAddress: $(ref.master-external.selfLink)
    target: $(ref.master-pool.selfLink)
    IPProtocol: TCP
- name: oc-master
  type: compute.v1.firewall
  properties:
    allowed:
    - IPProtocol: tcp
      ports:
      - 8443
    sourceRange: 0.0.0.0/0
    targetTags:
    - master
- name: master-internal-bs
  type: compute.v1.regionBackendService
  properties: 
    loadBalancingScheme: INTERNAL
    protocol: TCP
    region: {{ gcloud_region }}  
    healthChecks:
    - $(ref.master-internal-https-health-check.selfLink)
    backends:
{% for i in gcloud_masters_zones %} 
    - group: $(ref.{{ "master-"~i~"-ig" }}.selfLink) 
{% endfor %}         
- type: compute.v1.forwardingRule
  name: master-internal
  properties: 
    region: {{ gcloud_region }}
    ports: 
    - 8443
    IPProtocol: TCP
    loadBalancingScheme: INTERNAL
    backendService: $(ref.master-internal-bs.selfLink)
    
    
    
    
        
